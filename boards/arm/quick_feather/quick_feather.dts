/dts-v1/;
#include <quicklogic/quicklogic_eos_s3.dtsi>
#include "quick_feather.dtsi"

/ {
	model = "QuickLogic Quick Feather board";
	compatible = "quicklogic,eos_s3", "quicklogic,eos_s3x";

	chosen {
		zephyr,sram = &sram0;
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-pipe = &uart0;
	};

	aliases {
		led0 = &led0;
		led1 = &led1;
		led2 = &led2;
		pwm-led0 = &pwm_led0;
		pwm-led1 = &pwm_led1;
		pwm-led2 = &pwm_led2;
		red-pwm-led = &pwm_led0;
		green-pwm-led = &pwm_led1;
		blue-pwm-led = &pwm_led2;
		sw0 = &button0;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio 18 0>;
			label = "LED 0";
		};

		led1: led_1 {
			gpios = <&gpio 21 0>;
			label = "LED 1";
		};

		led2: led_2 {
			gpios = <&gpio 22 0>;
			label = "LED 2";
		};
	};

	pwmleds {
		compatible = "pwm-leds";
		pwm_led0: pwm_led_0 {
			pwms = <&pwm 0>;
			label = "Red PWM LED 0";
		};
		pwm_led1: pwm_led_1 {
			pwms = <&pwm 1>;
			label = "Green PWM LED 1";
		};
		pwm_led2: pwm_led_2 {
			pwms = <&pwm 2>;
			label = "Blue PWM LED 2";
		};
	};

	buttons {
		compatible = "gpio-keys";
		button0: button_0 {
			gpios = <&gpio 6 (GPIO_INT_ACTIVE_LOW | GPIO_PUD_PULL_UP) >;
			label = "User Push Button 0";
		};
	};
};

&cpu0 {
	clock-frequency = <61440000>;
};

&uart0 {
	status = "okay";
	current-speed = <115200>;
};

&spi {
	status = "okay";
};

&pwm {
	status = "okay";
};
